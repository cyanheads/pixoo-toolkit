{
  "name": "@cyanheads/pixoo-toolkit",
  "version": "0.2.0",
  "description": "TypeScript toolkit for Divoom Pixoo displays â€” pixel rendering, animations, and device control",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run tsc --watch",
    "demo": "bun run build && bun dist/scripts/demo.js",
