    "test:watch": "vitest",
    "lint": "eslint src/ scripts/ tests/",
    "format": "prettier --write src/ scripts/ tests/",
    "format:check": "prettier --check src/ scripts/ tests/"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/src"
  ],
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "^1.3.9",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "sharp": "^0.34.5"
  }
}
